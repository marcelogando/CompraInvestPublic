@page
@model LoginModel

@{
    ViewData["Title"] = "Entrar";
}


<main class="container-fluid w-100">
    <div class="row">
        <div class="container-fluid news-5">
            <form method="post" id="logar">
                <h4 class="w-100 text-danger text-center mt-2">Entrar</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="off" required autofocus />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Senha</label>
                    <input asp-for="Input.Password" class="form-control" required />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            Lembrar de mim
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-danger text-center w-100 p-2">Entrar</button>
                </div>
